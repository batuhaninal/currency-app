@using System.Text.Json
@using Client.Models.UserCurrencyFollows
@using Microsoft.Extensions.Primitives
@model UserCurrencyFollowFilterViewModel
@{
    var query = Context.Request.Query.ToDictionary(k => k.Key.ToLower(), v => v.Value);

    StringValues currencyIds;
    string[]? selectedCurrencies = query.TryGetValue("currencyid", out currencyIds)
    ? currencyIds.ToArray()
    : null;

    // Min - Max fiyat parametreleri
    Model.IsActive = query.ContainsKey("isactive");
