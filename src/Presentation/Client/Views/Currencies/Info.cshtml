            .GroupBy(key=> key.Date.AddDays(-(int)key.Date.DayOfWeek))
            .Select(x=> new CurrencyHistoryItemResponse(
                x.First().CurrencyHistoryId,
                x.First().CurrencyId,
                x.Average(y=> y.OldPurchasePrice),
                x.Average(y=> y.NewPurchasePrice),
