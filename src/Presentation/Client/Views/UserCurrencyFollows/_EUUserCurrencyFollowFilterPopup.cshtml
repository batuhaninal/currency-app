                <div class="modal-body" id="modal-body">
                    @await Html.PartialAsync("_DropdownTool", new DropdownModel(
                    "Birim Seciniz",
                                        "eu-filter-user-currency-follow-dropdown",
                                        "CurrencyId",
                                        "js-eu-currency-tool-multiple",
                                        Model.Currencies,
                                        true,
