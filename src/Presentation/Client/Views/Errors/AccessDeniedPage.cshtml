@model CustomErrorViewModel
@{
    Layout = "_ErrorLayout";
}
<div class="card shadow-lg p-5">
    <div class="error-icon text-danger mb-4">
        <i class="bi bi-lock-fill"></i>
    </div>
    <h1 class="display-4 text-danger">@Model.StatusCode</h1>
    <h2 class="mb-3">@Model.Title</h2>
    <p class="text-muted">@Model.Message</p>

    @if (!string.IsNullOrEmpty(Model?.RedirectPath))
    {
        <a href="@Model.RedirectPath" class="btn btn-primary mt-3"><i class="bi bi-arrow-left-circle me-2"></i>Önceki
            Sayfaya Dön</a>
    }
    else
    {
        @if(User.IsInRole("admin"))
        {
             <a asp-area="panel" asp-controller="Currencies" asp-action="Index" class="btn btn-secondary mt-3"><i class="bi bi-house-door me-2"></i>Birimler Sayfasi</a>
        }
        else
        {
             <a asp-area="" asp-controller="Assets" asp-action="Index" class="btn btn-secondary mt-3"><i class="bi bi-house-door me-2"></i>Assetler Sayfasi</a>
        }
    }
</div>