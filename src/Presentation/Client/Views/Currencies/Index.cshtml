@{
  Layout = "_Layout";
  var data = ViewBag.CategoryTool as List<CategoryToolResponse>;
  SelectList categoryTool = new SelectList(data, "CategoryId", "Title");

  var follows = ViewBag.Follows as int[];
  follows ??= new int[] { };
}

@model PaginationResult<EUCurrencyItemResponse>

<div class="row">
  <div class="card mb-4">
    <div class="card-header">
      <div class="d-flex justify-content-between">
        <div class="btn-group mb-2" role="group" aria-label="Basic mixed styles example">
          <button type="button" class="badge rounded-pill bg-info p-2 border-0" id="eu-filter-currency-btn"
            title="Birim Filtrele" data-bs-toggle="modal" data-bs-target="#eu-filter-currency-popup">
            <i class="fa-solid fa-filter"></i>
          </button>
          <a asp-area="" asp-controller="Currencies" asp-action="Index"
            class="badge rounded-pill bg-danger p-2 border-0" id="filter-currency-btn" title="Filtreleri temizle">
            <i class="fa-solid fa-filter"></i>
          </a>
        </div>
        <h3 class="card-title">Birimler Tablosu</h3>
        @await Html.PartialAsync("_SearchTool", new SearchModel())
      </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr class="text-center align-middle">
            <th>
              Kategorisi
              @await Html.PartialAsync("_OrderTool", new SortModel("categoryTitle", true))
            </th>
            <th>
              Birim Kisaltmasi
              @await Html.PartialAsync("_OrderTool", new SortModel("title"))
            </th>
            <th>
              Birim Ismi
              @await Html.PartialAsync("_OrderTool", new SortModel("subTitle"))
            </th>
            <th>
              Alis Fiyati
              @await Html.PartialAsync("_OrderTool", new SortModel("purchasePrice"))
            </th>
            <th>
              Satis Fiyati
              @await Html.PartialAsync("_OrderTool", new SortModel("salePrice"))
            </th>
            <th style="width: 40px">Islemler</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model.Items)
          {
            <tr class="text-center align-middle">
              <td>
                @(item.Category != null ? item.Category.Title : "")
              </td>
              <td>
                @item.Title
              </td>
              <td>
                @item.SubTitle
              </td>
              <td>
                <p><b style="color:#228D57;">@UIToolHelper.RenderTL(item.PurchasePrice)</b></p>
              </td>
              <td>
                <p><b style="color:#228D57;">@UIToolHelper.RenderTL(item.SalePrice)</b></p>
              </td>
              <td>
                <div class="d-inline-flex gap-1">
                  @if (follows is not null)
                  {
                    @if (follows.Contains(item.CurrencyId))
                    {
                      <form asp-area="" asp-controller="UserCurrencyFollows" asp-action="DeleteFav">
                        <input type="hidden" name="currencyId" value="@item.CurrencyId" />
                        <input type="hidden" name="redirectUrl"
                          value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                        <button type="submit" class="badge rounded-pill bg-danger p-2"
                          title="@item.CurrencyId idli birimi favorilerden kaldir">
                          <i class="fa-solid fa-thumbtack-slash"></i>
                        </button>
                      </form>
                    }
                    else
                    {
                      <form asp-area="" asp-controller="UserCurrencyFollows" asp-action="AddToFav">
                        <input type="hidden" name="currencyId" value="@item.CurrencyId" />
                        <input type="hidden" name="redirectUrl"
                          value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                        <button type="submit" class="badge rounded-pill bg-info p-2"
                          title="@item.CurrencyId idli birimi favorilere ekle">
                          <i class="fa-solid fa-thumbs-up"></i>
                        </button>
                      </form>
                      <form asp-area="" asp-controller="UserCurrencyFollows" asp-action="AddToBroadcast">
                        <input type="hidden" name="currencyId" value="@item.CurrencyId" />
                        <input type="hidden" name="redirectUrl"
                          value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                        <button type="submit" class="badge rounded-pill bg-warning p-2"
                          title="@item.CurrencyId idli birimi izlemeye al">
                          <i class="fa-solid fa-tower-broadcast"></i>
                        </button>
                      </form>
                    }
                  }
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
      @await Html.PartialAsync("_PaginationTool", Model)
    </div>
  </div>
</div>

<div id="empty-container"></div>

@await Html.PartialAsync("_EUCurrencyFilterPopup", new CurrencyFilterViewModel(categoryTool))

@section Scripts {
  <script>
    $(document).ready(function () {
      const d = $("#empty-container");

      $('#eu-filter-currency-popup').on('shown.bs.modal', function () {
        $('.js-eu-category-tool-multiple').select2({
          dropdownParent: $('#eu-filter-currency-popup'),
          width: '100%',
          placeholder: "Kategori se√ßiniz",
          allowClear: true
        });
      });

    });
  </script>
}